<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/facultiesSpinner"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="11dp"
        android:dropDownWidth="340dp"
        app:layout_constraintBottom_toTopOf="@+id/filterSpecialtyView"
        app:layout_constraintEnd_toEndOf="@+id/specialtySpinner"
        app:layout_constraintStart_toStartOf="@+id/specialtySpinner"
        app:layout_constraintTop_toBottomOf="@+id/filterFacultiesView" />

    <Spinner
        android:id="@+id/specialtySpinner"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:dropDownWidth="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterSpecialtyView" />

    <TextView
        android:id="@+id/filterFacultiesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="13dp"
        android:text="Институты"
        app:layout_constraintBottom_toTopOf="@+id/facultiesSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/filterSpecialtyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="13dp"
        android:text="Направление"
        app:layout_constraintBottom_toTopOf="@+id/specialtySpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facultiesSpinner" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="182dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:text="Фильтры поиска"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>